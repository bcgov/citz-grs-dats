{
	"extends": "@electron-toolkit/tsconfig/tsconfig.web.json",
	"include": [
		"src/renderer/src/env.d.ts",
		"src/renderer/src/**/*",
		"src/renderer/src/**/*.tsx",
		"src/preload/**/*",
		"src/api/**/*",
		"src/hooks/**/*",
		"src/global.d.ts",
		"src/**/*"
	],
	"compilerOptions": {
		"composite": true,
		"jsx": "react-jsx",
		"baseUrl": ".",
		"paths": {
			"@renderer/*": [
				"src/renderer/src/*"
			],
			"@hooks/*": [
				"src/hooks/*"
			],
			"@preload/*": [
				"src/preload/*"
			]
		}
	},
	"exclude": [
		"node_modules",
		"dist",
		"build"
	]
}
