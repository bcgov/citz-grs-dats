{
	"extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
	"include": [
		"electron.vite.config.*",
		"src/main/**/*",
		"src/preload/**/*"
	],
	"compilerOptions": {
		"composite": true,
		"types": [
			"electron-vite/node"
		],
		"paths": {
			"@/*": [
				"src/*"
			],
			"@hooks/*": [
				"src/renderer/src/hooks/*"
			],
			"@preload/*": [
				"src/preload/*"
			],
			"@renderer/*": [
				"src/renderer/src/*"
			]
		}
	},
	"exclude": [
		"node_modules",
		"dist",
		"build"
	]
}
